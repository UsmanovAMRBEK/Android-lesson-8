<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/black"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ic_back_arrow"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/baseline_arrow_back_24"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/ic_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="#32252F"
        app:cardCornerRadius="6dp"
        >
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/baseline_more_vert_24"
            android:layout_margin="4dp"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ic_bookmark"
        app:layout_constraintEnd_toStartOf="@+id/ic_more"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="#32252F"
        app:cardCornerRadius="6dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="12dp"
        >
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/baseline_bookmark_24"
            android:layout_margin="4dp"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/ic_bookmark"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="#32252F"
        app:cardCornerRadius="6dp"
        android:layout_marginRight="12dp"
        >
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/baseline_share_24"
            android:layout_margin="4dp"
            />
    </androidx.cardview.widget.CardView>
    <ImageView
        android:id="@+id/ic_main"
        android:layout_width="match_parent"
        android:layout_height="232dp"
        app:layout_constraintTop_toBottomOf="@id/ic_bookmark"
        app:layout_constraintStart_toStartOf="parent"
        app:circularflow_radiusInDP="12dp"
        android:layout_marginTop="24dp"
        android:src="@mipmap/ic_joi_baiden_foreground"
        android:scaleType="centerCrop"
        android:background="@drawable/img_back"
        android:clipToOutline="true"
        />
    <TextView
        android:id="@+id/tv_title"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ic_main"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/text1_title"
        android:textColor="@color/white"
        android:textSize="20sp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginVertical="16dp"
        android:background="@drawable/btn1_back"
        android:text="@string/btn1_text"
        android:textAllCaps="false"
        android:textColor="#FF7F79"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/ic_eye"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toEndOf="@+id/btn1"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="8dp"
        android:src="@drawable/baseline_remove_red_eye_24"
        />
    <TextView
        android:id="@+id/tv_views"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        app:layout_constraintStart_toEndOf="@+id/ic_eye"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="2dp"
        android:text="638.8K"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center_vertical"
        />
    <ImageView
        android:id="@+id/ic_hand_like"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toEndOf="@+id/tv_views"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="8dp"
        android:src="@drawable/ic_hand_like"
        />
    <TextView
        android:id="@+id/tv_likes"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        app:layout_constraintStart_toEndOf="@+id/ic_hand_like"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="2dp"
        android:text="341.4K"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center_vertical"
        />
    <ImageView
        android:id="@+id/ic_comments"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toEndOf="@+id/tv_likes"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="8dp"
        android:src="@drawable/baseline_comment_24"
        />
    <TextView
        android:id="@+id/tv_comments"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        app:layout_constraintStart_toEndOf="@+id/ic_comments"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="2dp"
        android:text="170.5K"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center_vertical"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/iv_bbc_news"
        android:layout_marginVertical="12dp"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:cardCornerRadius="50dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/btn1"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="#920000"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_bbc_news_foreground"
            android:scaleType="fitXY"
            android:clipToOutline="true"
            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/tv_bbc_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/iv_bbc_news"
        app:layout_constraintTop_toTopOf="@+id/iv_bbc_news"
        android:text="BBC News"
        android:textColor="#FF7F79"
        android:textSize="20sp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="6dp"
        />
    <TextView
        android:id="@+id/tv_bbc_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/iv_bbc_news"
        app:layout_constraintBottom_toBottomOf="@+id/iv_bbc_news"
        android:text="5 days ago"
        android:textColor="#FFF"
        android:textSize="14sp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="4dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_follow"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:background="@drawable/btn_follow"
        android:backgroundTint="#FF6861"
        android:drawableStart="@drawable/baseline_add_24"
        android:drawablePadding="4dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:text="Follow"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_bbc_title"
        tools:ignore="TouchTargetSizeCheck" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_bbc_news"
        >
        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/content"
            android:textColor="@color/white"
            android:inputType="textMultiLine"
            tools:ignore="VisualLintLongText" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>